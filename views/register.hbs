<section class="credential-form">
    <h2>Register</h2>
    {{#if errors}}
    <div>
        {{#each errors}}
        <p class="errors">{{this}}</p>
        {{/each}}
    </div>
    {{/if}}
    <form action="/auth/register" method="POST">

        <div class="form-element">
            <p>Email: </p>
            <label for="email"><i class="fas fa-envelope"></i><input type="text" id="email" name="email"
                    placeholder="Email" value="{{userData.email}}"></label>

        </div>
        <div class="form-element">
            <p>Username: </p>
            <label for="username"><i class="fas fa-user"></i><input type="text" id="username" name="username"
                    placeholder="Username" value="{{userData.username}}"></label>

        </div>
        <div class="form-element">
            <p>Password: </p>
            <label for="password"><i class="fas fa-lock"></i><input type="password" id="password" name="password"
                    placeholder="Password"></label>

        </div>
        <div class="form-element">
            <p>Confirm Password: </p>
            <label for="rePass"><i class="fas fa-lock"></i><input type="password" id="rePass" name="rePass"
                    placeholder="Confirm Password"></label>

        </div>
        <div class="form-element">
            <button type="submit">Register</button>
        </div>
    </form>
</section>