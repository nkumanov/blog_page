<section class="detail-content">
    {{#if postData}}
    <div class="detail-wrapper">

        <article class="detail-blog-head">
            <img src="{{postData.imageUrl}}" alt=""
                class="blog-image">
        </article>
        <article class="detail-buttons">
            <div class="detail-buttons-left">
                <a href="/blog/like/{{postData._id}}" title="I like this"><i class="fas fa-thumbs-up"></i>{{postData.likes}} Likes</a>
                <a href="/blog/dislike/{{postData._id}}" title="I dislike this"><i class="fas fa-thumbs-down"></i>{{postData.dislikes}} Dislikes</a>
            </div>

            <p>Created at: {{postData.createdAt}}</p>

        </article>
        <div class="detail-blog-body">

            <p>{{postData.description}}</p>
        </div>

        <div class="detail-comments">
            <h3>Comments:</h3>
            <form action="/blog/comment/{{postData._id}}" method="GET"><p class="self-comment"><img src="/static/images/avatar.png" alt=""> <input type="text"
                    placeholder="Write your comment here" name="comment" id="comment" ></p></form>
            {{#each postData.comments}}
            <div class="comment-card">
                <img src="/static/images/avatar.png" alt="">
                <div class="user-comment">
                    <span>{{this.author}}</span>
                    <span>{{this.comment}}</span>
                </div>
            </div>
            {{/each}}
        </div>

    </div>
    {{/if}}
</section>